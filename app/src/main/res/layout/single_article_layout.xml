<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="25dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/article_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/colorAccent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/evogriaitalic"
            android:paddingStart="12dp"
            android:maxLines="5"
            android:textColor="#000"
            android:ellipsize="end"
            android:maxEms="14"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="@+id/article_image"
            app:layout_constraintStart_toEndOf="@id/article_image"
            app:layout_constraintBottom_toTopOf="@+id/article_date"
            tools:text="Neki naslov koji je malo dlksan lkdnsa lndksna lkdna klsndn aslkndnalk snkdl kasnldn klasnkldnalksndkldksanlkdnaslkndlnasdnlasnkldnaslkndklnsal;ldmsakldnsalkndlasndlkasndlkasndlksandlaskndlkasndlsakndlsakndlkasndlkasndlksandlsk" />

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12dp"
            android:textColor="#555"
            android:ellipsize="end"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="8.6.2021\n10:30" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>